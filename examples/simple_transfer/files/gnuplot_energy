set terminal jpeg
set output 'energy.jpg'

set yrange [0:1.1]
set y2range [0:1.1]
set xrange [0:10000]
set x2range [0:10000]
set ytics #nomirror
set y2tics

set xlabel "Timestep"
set ylabel "Total Energy Ratio" font "Hershey/Complex_Script"

plot "energy.dat" using 1:2 axes x1y1 notitle pt 7 ps 1 lt rgb "blue", \
     "energy.dat" using 1:3 axes x2y2 notitle 'Side B' pt 7 ps 1 lt rgb "red"
