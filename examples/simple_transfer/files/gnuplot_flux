set terminal jpeg
set output 'flux.jpg'

set yrange [-1.1:1.1]
set y2range [-1.1:1.1]
set xrange [0:10000]
set x2range [0:10000]
set ytics #nomirror
set y2tics

set xlabel "Timestep"
set ylabel "Total Energy Ratio" font "Hershey/Complex_Script"

plot "flux.dat" using 1:2 axes x1y1 notitle pt 7 ps 1 lt rgb "blue", \
     "flux.dat" using 1:3 axes x2y2 notitle pt 7 ps 1 lt rgb "red"
